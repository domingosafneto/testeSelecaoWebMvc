                    </tr>
                    <tr>
                        <td>
                            @foreach (var contato in item.Contatos)
                            {
                        <tr>
                            <td><p>@contato.Tipo: @contato.Valor</p></td>
                            <td><p>&nbsp&nbsp&nbsp @Html.ActionLink("Editar", "Edit", "Contatos", new { id = contato.Id }, null)</p></td>
                            <td><p>&nbsp&nbsp&nbsp @Html.ActionLink("Excluir", "Delete", "Contatos", new { id = contato.Id }, null)</p></td>
